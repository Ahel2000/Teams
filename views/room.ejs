  <title>Document</title>
  <style>
    #video-grid {
      width:70%;
      display: grid;
      grid-template-columns: repeat(auto-fill, 200px);
      grid-auto-rows: 200px;
    }
    
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    #videopluschat{
      width:100%;
      height:90%;
      display: flex;
    }

    #chat-grid{
      width:30%;
      height: 90%;
      display: flex;
      flex-direction: column;
    }

    #chat-contents{
      height:500px;
      border: 0.5px solid black;
    }

    #form{
      
    }

    #send-message{
      display: flex;
      flex-direction: row;
    }

    #message-input{
      height: 30px;
      width: 300px;
    }
    
    #send-button{
      height: 30px;

    }
  </style>
</head>
<body>
  <div id="videopluschat">
  <div id="video-grid"></div>
  <div id="chat-grid">
    <div id="chat-container">
      <h1>INBOX</h1>
      <div id="chat-contents">
        <h1>hello</h1>
      </div>
    </div>
    <form id="form">
      <label>Send Message</label>
      <div id="send-message"></div>
        <input type="text" id="message-input"></input>
        <button type="button" id="send-button">Send</button>
    </div>
    </form>
  </div>
</div>
</body>
</html>